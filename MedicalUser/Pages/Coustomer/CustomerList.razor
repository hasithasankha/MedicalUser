    //    cutomerList = await Task.Run(() => customerService.GetCustomersList());
    //}

    List<Customer> cutomerList;
    protected override async Task OnInitializedAsync()
    {
        cutomerList = await Task.Run(() => customerService.GetCustomersList());
    }

}
